<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contactitem_layout"
        style="@style/MMListItem"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/head" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dip" >

            <TextView
                android:id="@+id/userName"
                style="@style/MMFontTitleInList"
                android:text="Mersens"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="我是多幸福啊！辛苦了亲爱的！么么哒！~"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/layout_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="80.0dip"
                    android:layout_height="80.0dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_action_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/layout_photo"
                android:drawableLeft="@drawable/ic_action_comment"
                android:gravity="center"
                android:text="评论"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/item_action_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_photo"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/item_action_comment"
                android:drawableLeft="@drawable/ic_action_share"
                android:gravity="center"
                android:text="分享"
                android:textColor="#888888" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

</LinearLayout>