<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="15dp"
	android:background="@color/white"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
		android:gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="280dp">
	 
		<TextView
			android:textSize="20sp"
			android:id="@+id/nick"
			android:text="Mersens"
			android:gravity="right|bottom"
			android:paddingRight="140dp"
			android:paddingBottom="10dp"
			android:background="@drawable/user_ba"
			android:layout_width="fill_parent"
			android:textColor="@color/white"
			android:layout_height="220dp" />

		<ImageView
		    android:id="@+id/head"
		    android:layout_width="80.0dip"
		    android:layout_height="80.0dip"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_marginBottom="20dp"
		    android:layout_marginLeft="17dp"
		    android:contentDescription="@string/app_name"
		    android:src="@drawable/header" />

	</RelativeLayout>
	
	
	  <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_mid_bg"
        android:padding="10dp" >

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/add_name" />

        <TextView
            android:id="@+id/tv_set_name"
            style="@style/Smile.TextView._Black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp" />
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/about_mid_bg"
        android:padding="10dp" >

        <TextView
            style="@style/Smile.TextView._Black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/add_gender" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_set_gender"
                style="@style/Smile.TextView._Black"
                android:layout_marginRight="20dp"
                android:drawablePadding="10dp" />
            
        </LinearLayout>

        

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/user_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/about_mid_bg"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/user_sign_tips"
                style="@style/Smile.TextView._Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="@string/sign" />

            <TextView
                android:id="@+id/user_sign_text"
                style="@style/Smile.TextView._Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/user_sign_tips"
                android:layout_centerVertical="true"
                android:layout_marginLeft="100dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingBottom="8dip"
                android:paddingTop="8dip" />
        </RelativeLayout>
	<Button
            android:id="@+id/add_frid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_action_bar_height"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="@string/add_frid"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large" />
	 
</LinearLayout>